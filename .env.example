# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Welcome Channel Configuration
WELCOME_CHANNEL_IDS=123456789,987654321  # 可以設置多個頻道ID，用逗號分隔

# Primary AI Model Configuration (for main responses)
PRIMARY_AI_SERVICE=azureopenai  # or gemini
PRIMARY_MODEL=gpt-4  # or gemini-1.0-pro

# Classifier AI Model Configuration (for message classification)
CLASSIFIER_AI_SERVICE=gemini  # or azureopenai
CLASSIFIER_MODEL=gemini-1.0-pro  # or gpt-3.5-turbo

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key

# Tavily Search Configuration
TAVILY_API_KEY=your_tavily_api_key
TAVILY_SEARCH_MAX_RESULTS=5  # Optional, default is 5

# Development Settings
DEBUG=False
LOG_LEVEL=INFO

# Leave Configuration
LEAVE_ALLOWED_ROLES=123456789,987654321  # 允許使用請假指令的身份組ID，用逗號分隔 
LEAVE_ANNOUNCEMENT_CHANNEL_IDS=123456789,987654321  # 請假公告頻道ID，用逗號分隔

# Crazy Talk Configuration
CRAZY_TALK_ALLOWED_USERS=123456789,987654321  # 允許使用 crazy talk 指令的用戶ID，用逗號分隔